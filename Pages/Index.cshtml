@page
@model Lab1.Pages.IndexModel
@{
    ViewData["Title"] = "Chinese Zodiac Sign";
}

<h1>Find Your Chinese Zodiac Sign</h1>

<form method="post">
    <div class="form-group">
        <label for="SelectedYear">Enter a year (between 1900 and @(DateTime.Now.Year + 1)):</label>
        <input type="number" class="form-control" id="SelectedYear" name="SelectedYear" required min="1900" max="@(DateTime.Now.Year + 1)">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Find Zodiac Sign</button>
</form>

@if (Model.ZodiacSign != null)
{
    <div class="mt-3">
        @if (Model.ZodiacSign == "Invalid input. Please enter a year between 1900 and " + (DateTime.Now.Year + 1) + ".")
        {
            <span style="color: red;">@Model.ZodiacSign</span>
        }
        else
        {
            <strong>Your Chinese Zodiac Sign for the year @Model.SelectedYear:</strong> @Model.ZodiacSign
            <div>
                <img src="./images/@(Model.ZodiacSign.ToLower()).png" alt="@Model.ZodiacSign" />
            </div>
        }
    </div>
}
